{
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(markdownlint *)",
      "Bash(echo *)"
    ],
    "deny": [
      "Bash(git push --force *)",
      "Bash(git push -f *)",
      "Bash(rm -rf /)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'File modified: review before committing'",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
